<Page x:Class="WPF.Check"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Przepisy">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Labels -->
        <Label Grid.Row="0" Grid.Column="0" >Lista przepisów</Label>
        <Label Grid.Row="0" Grid.Column="1" >Opis przepisu</Label>
        <Label Grid.Row="0" Grid.Column="2" >Składniki przepisu</Label>
        
        <!-- List boxes -->
        <ListBox Grid.Row="1" Grid.Column="0" Style="{StaticResource checkListBox}"/>

    </Grid>
</Page>
