<Page x:Class="WPF.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="Przepisy">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource homeButton}" Click="Check_Click">Przegladaj przepisy</Button>
        <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource homeButton}" Click="Modify_Click">Modyfikuj przepisy</Button>
        <Label Content="Książka kucharska&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Center" 
               Grid.Row="1" VerticalAlignment="Center"/>

    </Grid>
</Page>
